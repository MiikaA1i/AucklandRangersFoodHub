<?xml version="1.0" encoding="utf-8" ?> 


<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!--Top Of page-->

      <!--Restruants top logo-->
    <TextView 
        android:text="Auckland Rangers"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="95dp"
        android:textSize="25dp"
        android:layout_y="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/logo" />

    />
      <!--Profile Icon button-->
    <ImageButton
        android:background="@android:color/white"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_x="340dp"
        android:layout_y="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/profileicon"
        android:id="@+id/ButtonProfileIcon" />

     <!--Back Icon button-->
    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_x="10dp"
        android:layout_y="20dp"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:id="@+id/arrowicon" 
        android:src="@drawable/backbutton"/>

<!--Middle of page-->
    <!--Opening hours text-->
    <TextView
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opening hours:"
        android:textColor="@android:color/black"
        android:layout_x="150dp"
        android:textStyle="bold"
        android:layout_y="240dp"/>

    <TextView
        android:text="Mon - Sun"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:layout_y="255dp"
        android:layout_x="168dp"/>
    <TextView
        android:text="9am - 10pm"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:layout_y="273dp"
        android:layout_x="162dp"/>

    <!--Phone number text-->
    <TextView
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: 02212138372"
        android:textColor="@android:color/black"
        android:layout_x="127dp"
        android:layout_y="300dp"
        android:autoLink="phone" 
       
        android:id="@+id/phoneTextView"
        android:linksClickable="true"  
        />



    <!--Email text-->
        <TextView
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: AucklandRangersOnlineFoodHub@gmail.com"
        android:textColor="@android:color/black"
        android:layout_x="25dp"
        android:layout_y="340dp"
        />

     <!--Address text-->
        <TextView
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:Wwdw 34, Queen Street, Auckland City"
        android:textColor="@android:color/black"
        android:layout_x="40dp"
        android:layout_y="380dp"/>

    <!--Top image-->
    <ImageView
        android:layout_width="405dp"
        android:layout_height="140dp"
        android:layout_y="80dp"
        android:scaleType="fitCenter"
        android:background="@drawable/imgrest"/>
    <!--Map view image-->
    <ImageView
        android:layout_width="390dp"
        android:layout_height="150dp"
        android:layout_y="420dp"
        android:src="@drawable/map" />

 <!--bottom of page-->       
        <!--Menu button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Menu_Button"
        android:layout_x="10dp"
        android:layout_y="640dp"
         android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="12dp"
        android:id="@id/ButtonMenu"/>
    <!--Contact us button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Contact_Us_Button"
        android:layout_x="105dp"
        android:layout_y="640dp"
        android:textSize="12dp"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonContactUs"/>
    <!--Profile button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Profile_Button"
        android:layout_x="200dp"
        android:layout_y="640dp"
        android:textColor="#ff000000"
        android:textSize="12dp"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonProfile"/>
    <!--Cart button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Cart_button"
        android:layout_x="295dp"
        android:layout_y="640dp"
        android:textSize="12dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonCart"/>

</AbsoluteLayout>
