<?xml version="1.0" encoding="utf-8" ?> 


<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

     <!--Top Of page-->

      <!--Restruants top logo-->
    <TextView 
        android:text="Auckland Rangers"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="80dp"
        android:textSize="30dp"
        android:layout_y="10dp"
        android:textColor="@android:color/black"
        android:id="@+id/logo" />

    />
      <!--Profile Icon button-->
    <Button
        
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_x="340dp"
        android:layout_y="10dp"
        android:id="@+id/profileicon" />

     <!--Back Icon button-->
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_x="10dp"
        android:layout_y="10dp"
        android:id="@+id/arrowicon" />
<!--Middle of page-->
    <!--Opening hours text-->
    <TextView
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opening hours:"
        android:textColor="@android:color/black"
        android:layout_x="150dp"
        android:layout_y="240dp"/>
    <!--Phone number text-->
    <TextView
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone number:"
        android:textColor="@android:color/black"
        android:layout_x="150dp"
        android:layout_y="300dp"/>
    <!--Email text-->
        <TextView
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textColor="@android:color/black"
        android:layout_x="150dp"
        android:layout_y="340dp"/>
    <!--Top image-->
    <ImageView
        android:layout_width="390dp"
        android:layout_height="140dp"
        android:layout_y="80dp"
        android:background="#ffe0e0e0"/>
    <!--Map view image-->
    <ImageView
        android:layout_width="390dp"
        android:layout_height="150dp"
        android:layout_y="420dp"
        android:background="#ffe0e0e0"/>

    <!--Menu button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Menu_Button"
        android:layout_x="10dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="15dp"
        android:id="@id/ButtonMenu"/>
    <!--Contact us button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Contact_Us_Button"
        android:layout_x="105dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonContactUs"/>
    <!--Profile button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Profile_Button"
        android:layout_x="200dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonProfile"/>
    <!--Cart button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Cart_button"
        android:layout_x="295dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonCart"/>
</AbsoluteLayout>