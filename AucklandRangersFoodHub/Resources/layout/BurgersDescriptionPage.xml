<?xml version="1.0" encoding="utf-8" ?> 

<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

<!--Top Of page-->

      <!--Restruants top logo-->
    <TextView 
        android:text="Auckland Rangers"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="95dp"
        android:textSize="25dp"
        android:layout_y="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/logo" />

    />
      <!--Profile Icon button-->
    <ImageButton
        android:background="@android:color/white"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_x="340dp"
        android:layout_y="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/profileicon"
        android:id="@+id/ButtonProfileIcon" />

     <!--Back Icon button-->
    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_x="10dp"
        android:layout_y="20dp"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:id="@+id/arrowicon" 
        android:src="@drawable/backbutton"/>

 <!--Middle Of Page-->

    <!--Dish Name text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="KRABBY PATTY"
        android:layout_y="100dp"
        android:layout_x="115dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"/>
    <ImageView
        android:layout_width="190dp"
        android:layout_height="180dp"
        android:background="#ffe0e0e0"
        android:layout_x="100dp"
        android:layout_y="150dp"
        android:src="@drawable/burger2"
        android:scaleType="fitXY"
        />
    <!--Dish ingredients text-->
    <TextView
        android:text="Dish Ingredients: "
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_x="150dp"
        android:layout_y="350dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />

    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_x="0dp"
        android:layout_y="368dp"
        android:textSize="13dp"
        android:text=" 1 cup salad, 1 tbs mayonise, 1 tbs tamato,1 cooked beef slice, 1 burger bun, 1 tsp mixed herbs , 1 cheddar slice"
        android:textColor="@android:color/black" />


        
    <!--Dish recipe text-->
     <TextView
        android:text="Dish Recipe: "
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_x="160dp"
        android:layout_y="410dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_x="0dp"
        android:layout_y="420dp"

        android:textColor="@android:color/black"/>

        <!--Nutritional value text-->
     <TextView
        android:text="Dish Nutritional Value: "
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_x="130dp"
        android:layout_y="490dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <!--Bottom Of Page-->

    <!--Menu button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Menu_Button"
        android:layout_x="10dp"
        android:layout_y="640dp"
        android:textColor="@android:color/white"
        android:background="@drawable/roundbuttonblack"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="12dp"
        android:id="@id/ButtonMenu"/>
    <!--Contact us button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Contact_Us_Button"
        android:layout_x="105dp"
        android:layout_y="640dp"
        android:textSize="12dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonContactUs"/>
    <!--Profile button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Profile_Button"
        android:layout_x="200dp"
        android:layout_y="640dp"
        android:textColor="#ff000000"
        android:textSize="12dp"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonProfile"/>
    <!--Cart button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Cart_button"
        android:layout_x="295dp"
        android:layout_y="640dp"
        android:textSize="12dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonCart"/>


</AbsoluteLayout>