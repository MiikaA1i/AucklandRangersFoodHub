<?xml version="1.0" encoding="utf-8" ?> 

<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

<!--Top Of page-->

      <!--Restruants top logo-->
    <TextView 
        android:text="Auckland Rangers"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_x="80dp"
        android:textSize="30dp"
        android:layout_y="10dp"
        />

    />
      <!--Profile Icon button-->
    <ImageButton
        android:background="@android:color/white"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_x="340dp"
        android:layout_y="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/profileicon"
        android:id="@+id/ButtonProfileIcon" />

     <!--Back Icon button-->
    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_x="10dp"
        android:layout_y="20dp"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:id="@+id/arrowicon" 
        android:src="@drawable/backbutton"/>

 <!--Middle Of Page-->

    <!--Dish Name text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Burger"
        android:layout_y="100dp"
        android:layout_x="120dp"
        android:textSize="25dp"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#ffe0e0e0"
        android:layout_x="125dp"
        android:layout_y="150dp"
        />
    <!--Dish ingredients text-->
    <TextView
        android:text="Dish Ingredients: "
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_x="150dp"
        android:layout_y="320dp"
        android:textColor="@android:color/black"
        />
    <!--Dish recipe text-->
     <TextView
        android:text="Dish Recipe: "
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_x="160dp"
        android:layout_y="380dp"
        android:textColor="@android:color/black"/>
        <!--Nutritional value text-->
     <TextView
        android:text="Dish Nutritional Value: "
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_x="130dp"
        android:layout_y="450dp"
        android:textColor="@android:color/black"/>

 <!--Bottom Of Page-->

    <!--Menu button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Menu_Button"
        android:layout_x="10dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="15dp"
        android:id="@id/ButtonMenu"/>
    <!--Contact us button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Contact_Us_Button"
        android:layout_x="105dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonContactUs"/>
    <!--Profile button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Profile_Button"
        android:layout_x="200dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonProfile"/>
    <!--Cart button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Cart_button"
        android:layout_x="295dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"        
        android:id="@id/ButtonCart"/>


</AbsoluteLayout>