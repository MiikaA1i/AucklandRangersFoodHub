<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <!--Top Of page-->

      <!--Restruants top logo-->
    <TextView 
        android:text="Auckland Rangers"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="80dp"
        android:textSize="30dp"
        android:layout_y="10dp"
        android:textColor="@android:color/black"
        android:id="@+id/logo" />

    />
      <!--Profile Icon button-->
    <Button
        
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_x="340dp"
        android:layout_y="10dp"
        android:id="@+id/profileicon" />

     <!--Back Icon button-->
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_x="10dp"
        android:layout_y="10dp"
        android:id="@+id/arrowicon" />

<!--MIDDLE OF PAGE-->

    <!--RECOMMENDATION-->
    <TextView 
        android:text="Recommendation"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="80dp"
        android:textSize="30dp"
        android:layout_y="90dp"
        android:textColor="@android:color/black"
        android:id="@+id/recom1" />

    <!--Recommendation Images-->
    <ImageButton
        
        android:layout_width="220dp"
        android:layout_alignParentRight="true"
        android:id="@+id/recom2"
        android:clickable="true"
        android:onClick="clickNew"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_y="150dp"
        android:layout_x="95dp"
    />

     <!--Left Back Icon button-->
    <Button
        
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_x="330dp"
        android:layout_y="200dp"
        android:id="@+id/leftarrowicon" />

     <!--Right Back Icon button-->
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_x="30dp"
        android:layout_y="200dp"
        android:id="@+id/rightarrowicon" />

     <!--Category Icons-->

    <!--HorizontalScrollView
        android:layout_width=""
        android:layout_height="" />
    -->
     <Button
        
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_x="30dp"
        android:layout_y="310dp"
        android:id="@+id/burgers" />

    <TextView 
        android:text="Burgers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="40dp"
        android:textSize="20dp"
        android:layout_y="400dp"
        android:id="@+id/burger2" />

    <Button
        
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_x="150dp"
        android:layout_y="310dp"
        android:id="@+id/seafood" />

    <TextView 
        android:text="Seafood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="160dp"
        android:textSize="20dp"
        android:layout_y="400dp"
        android:id="@+id/seafood2" />

    <Button
        
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_x="275dp"
        android:layout_y="310dp"
        android:id="@+id/vegeterian" />

    <TextView 
        android:text="Vegeterian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="275dp"
        android:textSize="20dp"
        android:layout_y="400dp"
        android:id="@+id/vegeterian2" />
    
     <!--Food Icons-->
    <Button
        
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_x="30dp"
        android:layout_y="450dp"
        android:id="@+id/firstfoodicon" />
    <Button
        
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_x="158dp"
        android:layout_y="450dp"
        android:id="@+id/secondfoodicon" />
    <Button
        
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_x="279dp"
        android:layout_y="450dp"
        android:id="@+id/thirdfoodicon" />


 <!--Bottom Of Page-->

     <!--Menu button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Menu_Button"
        android:layout_x="10dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="#ffe0e0e0"
        android:textSize="15dp"
        android:id="@id/ButtonMenu"/>
    <!--Contact us button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Contact_Us_Button"
        android:layout_x="105dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="#ffe0e0e0"
        android:id="@id/ButtonContactUs"/>
    <!--Profile button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Profile_Button"
        android:layout_x="200dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="#ffe0e0e0"
        android:id="@id/ButtonProfile"/>
    <!--Cart button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Cart_button"
        android:layout_x="295dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="#ffe0e0e0"
        android:id="@id/ButtonCart"/>


</AbsoluteLayout>