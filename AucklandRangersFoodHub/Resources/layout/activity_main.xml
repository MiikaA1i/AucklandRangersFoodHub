<?xml version="1.0" encoding="utf-8"?>

<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    
    <!--Top Of page-->

      <!--Restruants top logo-->
    <TextView 
        android:text="Auckland Rangers"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="80dp"
        android:textSize="30dp"
        android:layout_y="10dp"
        android:textColor="@android:color/black"
        android:id="@+id/logo" />

    />
      <!--Profile Icon button-->
    <ImageButton
        android:background="@android:color/white"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_x="340dp"
        android:layout_y="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/profileicon"
        android:id="@+id/ButtonProfileIcon" />


<!--MIDDLE OF PAGE-->

    <!--RECOMMENDATION-->
    <TextView 
        android:text="Recommendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="80dp"
        android:textSize="30dp"
        android:layout_y="90dp"
        android:textColor="@android:color/black"
        android:id="@+id/recom1" />

    <!--Recommendation Images-->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_x="95dp"
        android:layout_y="150dp"
        android:background="@android:color/white"
        android:id="@+id/ImageViewMain"/>

     <!--right Back Icon button-->
    <ImageButton
        
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_x="330dp"
        android:layout_y="200dp"
        android:id="@+id/btnNext"
        android:src="@drawable/left"
        android:scaleType="centerCrop"
        android:background="@android:color/white"/>

     <!--left Back Icon button-->
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_x="30dp"
        android:layout_y="200dp"
        android:id="@+id/btnPrev"
        android:src="@drawable/left"
        android:scaleType="centerCrop"
        android:background="@android:color/white"/>

    <!--Burgers image button-->
     <ImageButton
        
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_x="30dp"
        android:layout_y="310dp"
        android:id="@+id/ButtonBurgers" 
        android:src="@drawable/burgerImage" />
    <!--Burger text-->
    <TextView 
        android:text="Burgers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="40dp"
        android:textSize="20dp"
        android:layout_y="400dp"
        android:id="@+id/TextBurger" 
        android:textColor="@android:color/black"/>

        <!--Seafood image button-->
    <ImageButton
        
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_x="150dp"
        android:layout_y="310dp"
        android:id="@+id/seafood"
        android:scaleType="centerCrop"
        android:background="@android:color/white"
        android:src="@drawable/seafood" 
        />
        <!--Seafood text-->
    <TextView 
        android:text="Seafood"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="160dp"
        android:textSize="20dp"
        android:layout_y="400dp"
        android:id="@+id/seafood2"
        android:textColor="@android:color/black"/>
        
    <!--Vegetarian image button-->
    <ImageButton
        
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_x="275dp"
        android:layout_y="310dp"
        android:scaleType="centerCrop"
        android:background="@android:color/white"
        android:id="@+id/vegeterian"
        android:src="@drawable/vegeterian"
    />
    <!--Vegetarian text-->
    <TextView 
        android:text="Vegeterian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="275dp"
        android:textSize="20dp"
        android:layout_y="400dp"
        android:id="@+id/vegeterian2"
        
        android:textColor="@android:color/black"/>
    
     <!--Food Icons-->
    <ImageButton
        
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_x="30dp"
        android:layout_y="450dp"
        android:id="@+id/firstfoodicon"
        android:scaleType="centerCrop"
        android:background="@android:color/white"
        android:src="@drawable/burger2"/>

    
    <TextView
        android:text="Krabby Patty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="35dp"
        android:textSize="12dp"
        android:textColor="@android:color/black"
        android:layout_y="540dp"
        android:id="@+id/krabbypattyImg" />


        <!--Image button-->
    <ImageButton
        
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_x="158dp"
        android:layout_y="450dp"
        android:id="@+id/secondfoodicon" 
        android:src="@drawable/burger3"
        android:scaleType="centerCrop"
        android:background="@android:color/white" />

    <TextView
        android:text="Double Feast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="163dp"
        android:textSize="12dp"
        android:textColor="@android:color/black"
        android:layout_y="540dp"
        android:id="@+id/DoubleBurgerimg" />

        

        <!--Image button-->
    <ImageButton
        
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_x="279dp"
        android:layout_y="450dp"
        android:id="@+id/thirdfoodicon"
        android:src="@drawable/burgerImage"
        android:scaleType="centerCrop"
        android:background="@android:color/white"/>

    
    <TextView
        android:text="Ultimate Tower Stack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="265dp"
        android:textSize="12dp"
        android:textColor="@android:color/black"
        android:layout_y="540dp"
        android:id="@+id/ultimatetowerimg" />


 <!--Bottom Of Page-->

     <!--Menu button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Menu_Button"
        android:layout_x="10dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="15dp"
        android:id="@id/ButtonMenu"/>
    <!--Contact us button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Contact_Us_Button"
        android:layout_x="105dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonContactUs"/>
    <!--Profile button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Profile_Button"
        android:layout_x="200dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonProfile"/>
    <!--Cart button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Cart_button"
        android:layout_x="295dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonCart"/>


</AbsoluteLayout>