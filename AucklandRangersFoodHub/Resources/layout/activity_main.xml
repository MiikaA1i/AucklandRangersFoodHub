<?xml version="1.0" encoding="utf-8"?>

<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <!--Top Of page-->

    <!--Restruants top logo-->
    <TextView
        android:text="Auckland Rangers"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="95dp"
        android:textSize="25dp"
        android:layout_y="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/logo" />


    <!--Profile Icon button-->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_x="95dp"
        android:layout_y="150dp"
        android:background="@android:color/white"
        android:id="@+id/ImageViewMain"
        />
    <ImageButton
        android:background="@android:color/white"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_x="340dp"
        android:layout_y="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/profileicon"
        android:id="@+id/ButtonProfileIcon" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_x="10dp"
        android:layout_y="15dp"
        android:scaleType="fitCenter"
        android:id="@+id/searchButton"
        android:src="@drawable/searchIMG"
        android:background="@android:color/white"/>


    <!--MIDDLE OF PAGE-->

    <!--RECOMMENDATION-->
    <TextView
        android:text="Recommendations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="85dp"
        android:textSize="30dp"
        android:layout_y="90dp"
        android:textColor="@android:color/black"
        android:id="@+id/recom1"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        />

    <!--Recommendation Images-->

    <!--right Back Icon button-->
    <ImageButton
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_x="310dp"
        android:layout_y="200dp"
        android:id="@+id/btnNext"
        android:src="@drawable/left"
        android:scaleType="centerCrop"
        android:background="@android:color/white"/>

    <!--left Back Icon button-->
    <ImageButton
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_x="65dp"
        android:layout_y="200dp"
        android:id="@+id/btnPrev"
        android:src="@drawable/left"
        android:scaleType="centerCrop"
        android:background="@android:color/white"/>

    <!--Burgers image button-->
    <ImageButton
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:layout_x="35dp"
        android:layout_y="320dp"
        android:id="@+id/ButtonBurgers"
        android:src="@drawable/burgerImage"
        android:background="@drawable/roundbuttonwhite"
        style="?android:attr/borderlessButtonStyle"/>
    <!--Burger text-->
    <TextView
        android:text="Burgers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="55dp"
        android:textSize="18dp"
        android:layout_y="400dp"
        android:textStyle="bold"
        android:id="@+id/TextBurger"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/black"/>

    <!--Seafood image button-->
    <ImageButton
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:layout_x="155dp"
        android:layout_y="320dp"
        android:id="@+id/seafood"
        android:scaleType="centerCrop"
        android:background="@drawable/roundbuttonwhite"
        style="?android:attr/borderlessButtonStyle"
        android:src="@drawable/seafood" 
        />
    <!--Seafood text-->
    <TextView
        android:text="Seafood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="170dp"
        android:textSize="18dp"
        android:layout_y="400dp"
        android:textStyle="bold"
        android:id="@+id/seafood2"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/black"/>

    <!--Vegetarian image button-->
    <ImageButton
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:layout_x="275dp"
        android:layout_y="320dp"
        android:scaleType="centerCrop"
        android:background="@drawable/roundbuttonwhite"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/vegeterian"
        android:src="@drawable/vegeterian"
    />
    <!--Vegetarian text-->
    <TextView
        android:text="Vegeterian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="281dp"
        android:textSize="18dp"
        android:layout_y="400dp"
        android:textStyle="bold"
        android:id="@+id/vegeterian2"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/black"/>

    <!--Krabby Patty-->
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_x="60dp"
        android:layout_y="480dp"
        android:id="@+id/krabbypattyicon"
        android:scaleType="centerCrop"
        android:background="@drawable/roundbuttonwhite"
        android:src="@drawable/burger2"
        style="?android:attr/borderlessButtonStyle"/>


    <TextView
        android:text="Krabby Patty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="62dp"
        android:textSize="12dp"
        android:textColor="@android:color/black"
        android:layout_y="550dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/krabbypattyImg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$30"
        android:textSize="12dp"
        android:textColor="@android:color/black"
        android:layout_x="82dp"
        android:layout_y="565dp"/>

    <!-- Double Feast-->
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_x="160dp"
        android:layout_y="480dp"
        android:id="@+id/dualfeasticon"
        android:src="@drawable/burger3"
        android:scaleType="centerCrop"
        android:background="@drawable/roundbuttonwhite"
        style="?android:attr/borderlessButtonStyle"/>

    <TextView
        android:text="Double Feast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="163dp"
        android:textSize="12dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:layout_y="550dp"
        android:id="@+id/DoubleBurgerimg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$20"
        android:textSize="12dp"
        android:textColor="@android:color/black"
        android:layout_x="180dp"
        android:layout_y="565dp"/>



    <!--Ultimate Tower Stack-->
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_x="260dp"
        android:layout_y="480dp"
        android:id="@+id/USTicon"
        android:src="@drawable/burgerImage"
        android:scaleType="centerCrop"
        android:background="@drawable/roundbuttonwhite"
        style="?android:attr/borderlessButtonStyle"/>


    <TextView
        android:text="Ultimate Tower Stack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="245dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/black"
        android:layout_y="550dp"
        android:id="@+id/ultimatetowerimg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$40"
        android:textSize="12dp"
        android:textColor="@android:color/black"
        android:layout_x="282dp"
        android:layout_y="565dp"/>




    <!--Bottom Of Page-->

    <!--Menu button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Menu_Button"
        android:layout_x="10dp"
        android:layout_y="640dp"
        android:textColor="@android:color/white"
        android:background="@drawable/roundbuttonblack"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="12dp"
        android:id="@id/ButtonMenu"/>
    <!--Contact us button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Contact_Us_Button"
        android:layout_x="105dp"
        android:layout_y="640dp"
        android:textSize="12dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonContactUs"/>
    <!--Profile button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Profile_Button"
        android:layout_x="200dp"
        android:layout_y="640dp"
        android:textColor="#ff000000"
        android:textSize="12dp"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonProfile"/>
    <!--Cart button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Cart_button"
        android:layout_x="295dp"
        android:layout_y="640dp"
        android:textSize="12dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonCart"/>


</AbsoluteLayout>