<?xml version="1.0" encoding="utf-8" ?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <!--Auckland rangers text-->
    <TextView
        android:text="Auckland Rangers"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="95dp"
        android:textSize="25dp"
        android:layout_y="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/logo" />

    <!--Back Icon button-->
    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_x="10dp"
        android:layout_y="20dp"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:id="@+id/arrowicon"
        android:src="@drawable/backbutton"/>

    <!--Sign out button-->
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_x="340dp"
        android:layout_y="15dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:src="@drawable/SignOutimg"
        android:scaleType="fitCenter"
        android:id="@+id/ButtonSignOut"/>
    <!--Sign out text-->
    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:textSize="12dp"
        android:layout_x="330dp"
        android:layout_y="45dp"
        android:text="Sign Out"
        android:textColor="@android:color/black"/>

    <!--Middle of page-->

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ProfileView"
        android:background="@android:color/white"
        android:layout_x="145dp"
        android:layout_y="80dp"/>

    <!--Username-->
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="210dp"
        android:hint="Username"
        android:textColor="#ff000000"
        android:background="@drawable/Underline"
        android:inputType="text"
        android:textColorHint="#ff000000"
        android:id="@+id/username"
        />
    <!--Password-->
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="250dp"
        android:hint="Password"
        android:textColor="#ff000000"
        android:background="@drawable/Underline"
        android:inputType="text"
        android:textColorHint="#ff000000" 
        android:id="@+id/password"/>
    
    <!--Mobile number-->
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="290dp"
        android:hint="Mobile number"
        android:textColor="#ff000000"
        android:background="@drawable/Underline"
        android:inputType="text"
        android:textColorHint="#ff000000" 
        android:id="@+id/mobile"/>
    <!--Email-->
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="330dp"
        android:hint="Email"
        android:textColor="#ff000000"
        android:background="@drawable/Underline"
        android:inputType="text"
        android:textColorHint="#ff000000"
        android:id="@+id/email"/>

<!--Edit icons-->

    <!--Update button-->
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Update"
        android:background="@android:color/black"
        android:layout_x="155dp"
        android:layout_y="390dp"
        />
    <!--View reservation button-->
    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="View reservation"
        android:background="@android:color/black"
        android:layout_x="120dp"
        android:layout_y="450dp"
        android:padding="10dp"
        android:id="@+id/ButtonViewReservation"/>
    <!--Delete account-->
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Delete account"
        android:background="@android:color/holo_red_dark"
        android:layout_x="126dp"
        android:layout_y="560dp"
        android:padding="10dp"
        android:id="@+id/ButtonDeleteAccount"/>

    <!--Bottom Of Page-->

    <!--Menu button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Menu_Button"
        android:layout_x="10dp"
        android:layout_y="640dp"
        android:textColor="@android:color/black"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="12dp"
        android:id="@id/ButtonMenu"/>
    <!--Contact us button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Contact_Us_Button"
        android:layout_x="105dp"
        android:layout_y="640dp"
        android:textSize="12dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonContactUs"/>
    <!--Profile button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Profile_Button"
        android:layout_x="200dp"
        android:layout_y="640dp"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:background="@drawable/roundbuttonblack"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonProfile"/>
    <!--Cart button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Cart_button"
        android:layout_x="295dp"
        android:layout_y="640dp"
        android:textSize="12dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonCart"/>


</AbsoluteLayout>