<?xml version="1.0" encoding="utf-8" ?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <!--Auckland rangers text-->
    <TextView
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/Auckland_Rangers"
        android:textSize="25dp"
        android:layout_x="100dp"
        android:layout_y="40dp"
    />
    <!--Profile image-->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_x="150dp"
        android:layout_y="100dp"
        android:background="@android:color/black"
        />
    <!--Username-->
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="220dp"
        android:hint="Username"
        android:textColor="#ff000000"
        android:background="@drawable/Underline"
        android:inputType="text"
        android:textColorHint="#ff000000"

        />
    <!--Password-->
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="260dp"
        android:hint="Password"
        android:textColor="#ff000000"
        android:background="@drawable/Underline"
        android:inputType="text"
        android:textColorHint="#ff000000" />
    <!--Id-->
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="300dp"
        android:hint="Id"
        android:textColor="#ff000000"
        android:background="@drawable/Underline"
        android:inputType="text"
        android:textColorHint="#ff000000" />
    <!--Mobile number-->
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="340dp"
        android:hint="Mobile number"
        android:textColor="#ff000000"
        android:background="@drawable/Underline"
        android:inputType="text"
        android:textColorHint="#ff000000" />
    <!--Email-->
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="380dp"
        android:hint="Email"
        android:textColor="#ff000000"
         android:background="@drawable/Underline"
        android:inputType="text"
        android:textColorHint="#ff000000"/>

    <!--Edit icons-->
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@android:color/darker_gray"
        android:layout_x="310dp"
        android:layout_y="220dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@android:color/darker_gray"
        android:layout_x="310dp"
        android:layout_y="260dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@android:color/darker_gray"
        android:layout_x="310dp"
        android:layout_y="300dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@android:color/darker_gray"
        android:layout_x="310dp"
        android:layout_y="340dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@android:color/darker_gray"
        android:layout_x="310dp"
        android:layout_y="380dp"/>

    <!--Update button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Update"
        android:background="@android:color/black"
        android:layout_x="150dp"
        android:layout_y="420dp"
        />
    <!--View reservation button-->
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="View reservation"
        android:background="@android:color/black"
        android:layout_x="120dp"
        android:layout_y="480dp"
        android:padding="10dp"/>
    <!--Delete account-->
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Delete account"
        android:background="@android:color/black"
        android:layout_x="126dp"
        android:layout_y="540dp"
        android:padding="10dp"/>
    <!--Menu button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Menu_Button"
        android:layout_x="10dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="15dp"
        android:id="@id/ButtonMenu"/>
    <!--Contact us button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Contact_Us_Button"
        android:layout_x="105dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonContactUs"/>
    <!--Profile button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Profile_Button"
        android:layout_x="200dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonProfile"/>
    <!--Cart button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Cart_button"
        android:layout_x="295dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonCart"/>
</AbsoluteLayout>
