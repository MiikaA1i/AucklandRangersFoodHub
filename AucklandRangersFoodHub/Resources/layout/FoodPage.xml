<?xml version="1.0" encoding="utf-8" ?> 

<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--Top Of page-->

      <!--Restruants top logo-->
    <TextView 
        android:text="Auckland Rangers"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="80dp"
        android:textSize="30dp"
        android:layout_y="10dp"
        android:id="@+id/logo" />

    />
      <!--Profile Icon button-->
    <Button
        
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_x="340dp"
        android:layout_y="10dp"
        android:id="@+id/profileicon" />

     <!--Back Icon button-->
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_x="10dp"
        android:layout_y="10dp"
        android:id="@+id/arrowicon" />



 
 <!--Middle of Page-->

    <TextView
        android:text="Price:"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="230dp"
        android:textSize="20dp"
        android:layout_y="250dp"
        android:id="@+id/pricetxt" />


    <!--Image View-->
    <ImageView
        android:layout_width="160dp"
        android:id="@+id/imageview"
        android:onClick="clickNew"
        android:layout_height="150dp"
        android:layout_y="230dp"
        android:layout_x="30dp"
        android:background="#ffe0e0e0"
    />

    <!--Food Description button-->
    <Button
        android:text="Food Description"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_x="10dp"
        android:layout_y="400dp"
        android:id="@+id/fooddescription" />

    <!--Quantity button-->
    <Button
        android:text="+"
        android:layout_width="50dp"
        android:layout_height="10dp"
        android:layout_x="250dp"
        android:layout_y="350dp"
        android:id="@+id/plusbtn" />


    <!--Add to cart button-->
    <Button
        android:text="Add to cart"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_x="130dp"
        android:layout_y="520dp"
        android:id="@+id/addtocart" />



 <!--Bottom Of Page-->

    <!--Menu button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Menu_Button"
        android:layout_x="10dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="#ffe0e0e0"
        android:textSize="15dp"
        android:id="@id/ButtonMenu"/>
    <!--Contact us button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Contact_Us_Button"
        android:layout_x="105dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="#ffe0e0e0"
        android:id="@id/ButtonContactUs"/>
    <!--Profile button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Profile_Button"
        android:layout_x="200dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="#ffe0e0e0"
        android:id="@id/ButtonProfile"/>
    <!--Cart button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Cart_button"
        android:layout_x="295dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="#ffe0e0e0"
        android:id="@id/ButtonCart"/>



</AbsoluteLayout>