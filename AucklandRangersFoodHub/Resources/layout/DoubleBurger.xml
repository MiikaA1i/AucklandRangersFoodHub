<?xml version="1.0" encoding="utf-8" ?> 

<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

<!--Top Of page-->

      <!--Restruants top logo-->
    <TextView 
        android:text="Auckland Rangers"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="95dp"
        android:textSize="25dp"
        android:layout_y="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/logo" />

    />
      <!--Profile Icon button-->
    <ImageButton
        android:background="@android:color/white"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_x="340dp"
        android:layout_y="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/profileicon"
        android:id="@+id/ButtonProfileIcon" />

     <!--Back Icon button-->
    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_x="10dp"
        android:layout_y="20dp"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:id="@+id/BackButton" 
        android:src="@drawable/backbutton"/>



 
 <!--Middle of Page-->
    <!--Dish name text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOUBLE FEAST"
        android:textColor="@android:color/black"
        android:textSize="23dp"
        android:layout_x="30dp"
        android:layout_y="150dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"/>
    <!--Price Text-->
    <TextView
        android:text="Price: $10"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="220dp"
        android:textSize="19dp"
        android:layout_y="250dp"
        android:id="@+id/pricetxt" 
        android:textColor="@android:color/black"/>


    <!--Image View-->
    <ImageView
        android:layout_width="180dp"
        android:id="@+id/imageview"
        android:onClick="clickNew"
        android:layout_height="170dp"
        android:layout_y="200dp"
        android:layout_x="30dp"
        android:background="#ffe0e0e0"
        android:src="@drawable/burger3"
        android:scaleType="fitXY"
    />

    <!--View Description button Should take to Food Description page-->
    <Button
        android:text="View Description"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_x="10dp"
        android:layout_y="350dp"
        android:textColor="@android:color/holo_blue_dark"
        android:background="@android:color/white"
        android:id="@+id/ButtonViewDescription"
        style="?android:attr/borderlessButtonStyle"
        />
    <!--Quantity text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qty:"
        android:textColor="@android:color/black"
        android:layout_y="290dp"
        android:layout_x="220dp"
        android:textSize="19dp"
        android:id="@+id/TextViewQuantity"/>
        T
    <!--Quantity plus button-->
    <Button
        android:text="+"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_x="270dp"
        android:layout_y="285dp"
        android:id="@+id/ButtonPlus"
        android:textSize="20dp"
        android:background="@android:color/white"
        style="?android:attr/borderlessButtonStyle"        
        android:textColor="@android:color/black"/>
    <!--Quantity minus button-->
    <Button
        android:text="-"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_x="310dp"
        android:layout_y="285dp"
        android:id="@+id/ButtonMinus"
        android:textSize="25dp"
        android:background="@android:color/white"
        style="?android:attr/borderlessButtonStyle"        
        android:textColor="@android:color/black"/>
    <!--Total price text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/TextViewTotalPrice"
        android:layout_x="130dp"
        android:layout_y="480dp"
        android:text="Total cost:"
        android:textSize="19dp"/>
        

    <!--Add to cart button-->
    <Button
        android:text="Add to cart"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_x="130dp"
        android:layout_y="520dp"
        android:id="@+id/addtocart"
        android:textColor="@android:color/white"
        android:background="@android:color/black"/>



 <!--Bottom Of Page-->

    <!--Menu button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Menu_Button"
        android:layout_x="10dp"
        android:layout_y="600dp"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="15dp"
        android:id="@id/ButtonMenu"/>
    <!--Contact us button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Contact_Us_Button"
        android:layout_x="105dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonContactUs"/>
    <!--Profile button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Profile_Button"
        android:layout_x="200dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonProfile"/>
    <!--Cart button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Cart_button"
        android:layout_x="295dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonCart"/>



</AbsoluteLayout>