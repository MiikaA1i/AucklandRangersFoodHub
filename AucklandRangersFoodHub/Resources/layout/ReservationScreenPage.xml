<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
<!--Auckland rangers text-->
    <TextView
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Auckland Rangers"
        android:textSize="25dp"
        android:layout_x="100dp"
        android:layout_y="40dp"
        android:id="@+id/TextAucklandRangers"/>
    <!--Back button-->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="30dp"
        android:id="@+id/imageButtonBackButton"
     />

    <!--Profile icon button-->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_x="300dp"
        android:layout_y="30dp"
        android:id="@+id/imageButtonProfileButton"/>
    <!--Book your reservation text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book your reservation"
        android:textColor="#ff000000"
        android:textSize="25dp"
        android:layout_x="80dp"
        android:layout_y="130dp"
        />
    <!--My reservartions button-->
    <Button
        android:text="My reservations"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/ButtonMyReservations"
        android:backgroundTint="#ff000000"
        android:layout_x="100dp"
        android:layout_y="250dp"
        android:padding="30dp"
        android:textColor="#ffffffff" 
        />
    <!--Book A Reservation Button-->
    <Button
        android:text="Book a reservation"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/ButtonBookAReservation"
        android:backgroundTint="#ff000000"
        android:layout_x="100dp"
        android:layout_y="400dp"
        android:padding="30dp" 
        android:textColor="#ffffffff"/>
    <!--Menu button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Menu"
        android:layout_x="10dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="#ffe0e0e0"
        android:textSize="15dp"
        android:id="@+id/ButtonMenu"/>
    <!--Contact us button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Contact 
us"
        android:layout_x="105dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="#ffe0e0e0"
        android:id="@+id/ButtonContactUs"/>
    <!--Profile button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Profile"
        android:layout_x="200dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="#ffe0e0e0"
        android:id="@+id/ButtonProfile"/>
    <!--Cart button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Button"
        android:layout_x="295dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="#ffe0e0e0"
        android:id="@+id/ButtonCart"/>
</AbsoluteLayout>