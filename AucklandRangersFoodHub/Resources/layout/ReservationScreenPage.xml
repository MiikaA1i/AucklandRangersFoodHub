<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
      <!--Restruants top logo-->
    <TextView 
        android:text="Auckland Rangers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="80dp"
        android:textSize="30dp"
        android:layout_y="10dp"
        android:textColor="@android:color/black"
        android:id="@+id/logo" />
    <!--Back button-->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="30dp"
        android:id="@+id/imageButtonBackButton"
     />

    <!--Profile Icon button-->
    <Button
        
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_x="340dp"
        android:layout_y="10dp"
        android:id="@+id/ButtonProfileIcon" />
    <!--Book your reservation text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book your reservation"
        android:textColor="#ff000000"
        android:textSize="25dp"
        android:layout_x="80dp"
        android:layout_y="130dp"
        />
    <!--My reservartions button-->
    <Button
        android:text="My reservations"
        android:layout_width="147dp"
        android:layout_height="80dp"
        android:id="@+id/ButtonMyReservations"
        android:background="@drawable/roundbuttonblack"
        android:layout_x="120dp"
        android:layout_y="250dp"
        android:textColor="#ffffffff" 
        android:padding="10dp"

        />
    <!--Book A Reservation Button-->
    <Button
        android:text="Book a reservation"
        android:layout_width="147dp"
        android:layout_height="80dp"
        android:id="@+id/ButtonBookAReservation"
        android:background="@drawable/roundbuttonblack"
        android:layout_x="120dp"
        android:layout_y="400dp"
        android:padding="10dp"
        android:textColor="#ffffffff"/>
    <!--Menu button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Menu"
        android:layout_x="10dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="15dp"
        android:id="@+id/ButtonMenu"/>
    <!--Contact us button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Contact 
us"
        android:layout_x="105dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/ButtonContactUs"/>
    <!--Profile button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Profile"
        android:layout_x="200dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/ButtonProfile"/>
    <!--Cart button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Button"
        android:layout_x="295dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/ButtonCart"/>
</AbsoluteLayout>