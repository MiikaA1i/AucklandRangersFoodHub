<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    
    <!--Top Of page-->

      <!--Restruants top logo-->
    <TextView 
        android:text="Auckland Rangers"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="80dp"
        android:textSize="30dp"
        android:layout_y="10dp"
        android:textColor="@android:color/black"
        android:id="@+id/logo" />
    <!--Middle of page-->
    <!--Sign up text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_y="100dp"
        android:layout_x="130dp"
        android:textColor="@android:color/black"
        android:textSize="30dp"/>
    <!--Username-->
    <EditText
        android:id = "@+id/UpdateTextUserName"
        android:layout_width = "150dp"
        android:layout_height = "wrap_content"
        android:inputType = "text"
        android:layout_x="120dp"
        android:layout_y="200dp"
        android:hint="Username"
        android:background="@drawable/Underline"        
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"/>
    <!--Password input-->
    <EditText
        android:id = "@+id/UpdateTextPassword"
        android:layout_width = "150dp"
        android:layout_height = "wrap_content"
        android:layout_x="120dp"
        android:layout_y="250dp"
        android:hint="Password"
        android:background="@drawable/Underline"        
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"/>

    <!--mobile number input-->
    <EditText
        android:id = "@+id/UpdateTextMobile"
        android:layout_width = "150dp"
        android:layout_height = "wrap_content"
        android:layout_x="120dp"
        android:layout_y="300dp"
        android:hint="Mobile"
        android:inputType="phone"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"   
        android:background="@drawable/Underline"        />
    <!--email input-->
    <EditText
        android:id = "@+id/UpdateTextEmail"
        android:layout_width = "150dp"
        android:layout_height = "wrap_content"
        android:layout_x="120dp"
        android:layout_y="350dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black"
        android:background="@drawable/Underline"        
        android:textColorHint="@android:color/black"/>

    <!--Update button-->
    <Button
        android:text="Update"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_y="430dp"
        android:layout_x="115dp"
        android:id="@+id/ButtonUserUpdate"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        />
   
</AbsoluteLayout>