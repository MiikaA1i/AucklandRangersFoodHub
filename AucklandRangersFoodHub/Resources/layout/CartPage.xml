<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

<!--Top Of page-->

      <!--Restruants top logo-->
    <TextView 
        android:text="Auckland Rangers"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="80dp"
        android:textSize="30dp"
        android:layout_y="10dp"
        android:id="@id/logo"
        android:textColor="@android:color/black"/>

    />
      <!--Profile Icon button-->
    <Button
        
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_x="340dp"
        android:layout_y="10dp"
        android:id="@id/ButtonProfileIcon" />

     <!--Back Icon button-->
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_x="10dp"
        android:layout_y="10dp"
        android:id="@+id/arrowicon" />

<!--Middle Of Page-->
    <TextView 
        android:text="Checkout"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="80dp"
        android:textSize="30dp"
        android:layout_y="100dp"
        android:id="@+id/textView1"
        android:textColor="@android:color/black"/>

    <TextView 
        android:text="Total Price:"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:textSize="20dp"
        android:layout_y="150dp"
        android:id="@+id/textView2"
        android:textColor="@android:color/black"/>

    <ListView
        android:layout_width="340dp"
        android:layout_height="90dp"
        android:layout_x="20dp"
        android:layout_y="190dp"
        android:background="#ffe0e0e0"
        />
    <!--Credit card button-->
    <Button
        android:text="Credit Card"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_y="430dp"
        android:layout_x="115dp"
        android:textColor="@android:color/white"
        android:background="@android:color/black"/>
    <!--Cash button-->
    <Button
        android:text="Cash"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_y="510dp"
        android:layout_x="115dp"
        android:background="@android:color/black"
        android:textColor="@android:color/white"/>


 <!--Bottom Of Page-->

     <!--Menu button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Menu_Button"
        android:layout_x="10dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="15dp"
        android:id="@id/ButtonMenu"/>
    <!--Contact us button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Contact_Us_Button"
        android:layout_x="105dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonContactUs"/>
    <!--Profile button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Profile_Button"
        android:layout_x="200dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonProfile"/>
    <!--Cart button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Cart_button"
        android:layout_x="295dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonCart"/>


</AbsoluteLayout>