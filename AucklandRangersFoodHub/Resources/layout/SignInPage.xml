<?xml version="1.0" encoding="utf-8" ?> 
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

<!--Top Of page-->

      <!--Restruants top logo-->
    <TextView 
        android:text="Auckland Rangers"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="80dp"
        android:textSize="30dp"
        android:layout_y="10dp"
        android:id="@+id/logo"
        android:textColor="@android:color/black"/>

    />
      <!--Profile Icon button-->
    <Button
        
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_x="340dp"
        android:layout_y="10dp"
        android:id="@+id/profileicon" />

     <!--Back Icon button-->
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_x="10dp"
        android:layout_y="10dp"
        android:id="@+id/arrowicon" />

<!--Middle of page-->
        <!--Password input-->
    <EditText
        android:id = "@+id/Password"
        android:layout_width = "170dp"
        android:layout_height = "wrap_content"
        android:inputType = "textPassword"
        android:layout_x="110dp"
        android:layout_y="280dp"
        android:hint="Password"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black" 
        android:background="@drawable/Underline"        />
    <!--Username input-->
    <EditText
        android:id = "@+id/userName"
        android:layout_width = "170dp"
        android:layout_height = "wrap_content"
        android:layout_x="110dp"
        android:layout_y="230dp"
        android:hint="Username"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:background="@drawable/Underline"
        />

        <!--Sign In Button-->
    <Button
        android:text="Sign in"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_y="350dp"
        android:layout_x="140dp"
        android:id="@+id/ButtonSignIn"
        android:textColor="@android:color/white"
        android:background="@android:color/black"/>

        <!--Sign up button-->
    <Button
        android:text="Sign Up"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_y="430dp"
        android:layout_x="140dp"
        android:id="@+id/ButtonSignUp"
        android:textColor="@android:color/white"
        android:background="@android:color/black"/>/>

    <!--Menu button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Menu_Button"
        android:layout_x="10dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="15dp"
        android:id="@id/ButtonMenu"/>
    <!--Contact us button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Contact_Us_Button"
        android:layout_x="105dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonContactUs"/>
    <!--Profile button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Profile_Button"
        android:layout_x="200dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonProfile"/>
    <!--Cart button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/Cart_button"
        android:layout_x="295dp"
        android:layout_y="600dp"
        android:textColor="#ff000000"
           android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonCart"/>

</AbsoluteLayout>