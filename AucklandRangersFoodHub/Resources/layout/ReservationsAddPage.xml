<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
 
 <!--Top Of page-->

      <!--Restruants top logo-->
    <TextView 
        android:text="Auckland Rangers"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="95dp"
        android:textSize="25dp"
        android:layout_y="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/logo" />

    
      <!--Profile Icon button-->
    <ImageButton
        android:background="@android:color/white"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_x="340dp"
        android:layout_y="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/profileicon"
        android:id="@+id/ButtonProfileIcon" />

     <!--Back Icon button-->
    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_x="10dp"
        android:layout_y="20dp"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:id="@+id/arrowicon" 
        android:src="@drawable/backbutton"/>

    <!--Table name edit text-->
    <EditText
        android:layout_x="100dp"
        android:layout_y="130dp"
        android:background="@drawable/Underline"  
        android:textColorHint="@android:color/black"
        android:hint="Table name"
        android:textColor="@android:color/black"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTableName"/>
    <!-- Table number edit text-->
        <EditText
        android:layout_x="100dp"
        android:layout_y="230dp"
        android:background="@drawable/Underline"  
        android:textColorHint="@android:color/black"
        android:hint="Table number"
        android:textColor="@android:color/black"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTableNumber"/>
    <!--Time edit text-->
        <EditText
        android:layout_x="100dp"
        android:layout_y="310dp"
        android:background="@drawable/Underline"  
        android:textColorHint="@android:color/black"
        android:hint="Time"
        android:textColor="@android:color/black"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTime"/>
    <!--book reservation button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonCreateReservation"
        android:text="Book reservation"
        android:textColor="@android:color/white"
        android:background="@drawable/roundbuttonblack"
        android:layout_x="115dp"
        android:padding="10dp"
        android:layout_y="520dp"
        />

    <!--Number of people button-->
     <EditText
        android:layout_x="100dp"
        android:layout_y="400dp"
        android:background="@drawable/Underline"  
        android:textColorHint="@android:color/black"
        android:hint="Number of people"
        android:textColor="@android:color/black"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:id="@+id/editNumofPeople"/>


 <!--Bottom Of Page-->

     <!--Menu button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Menu_Button"
        android:layout_x="10dp"
        android:layout_y="640dp"
        android:textColor="@android:color/black"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="12dp"
        android:id="@id/ButtonMenu"/>
    <!--Contact us button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Contact_Us_Button"
        android:layout_x="105dp"
        android:layout_y="640dp"
        android:textSize="12dp"
        android:textColor="#ff000000"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonContactUs"/>
    <!--Profile button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Profile_Button"
        android:layout_x="200dp"
        android:layout_y="640dp"
        android:textColor="#ff000000"
        android:textSize="12dp"
        android:background="@drawable/roundbutton"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonProfile"/>
    <!--Cart button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/Cart_button"
        android:layout_x="295dp"
        android:layout_y="640dp"
        android:textSize="12dp"
        android:textColor="@android:color/white"
        android:background="@drawable/roundbuttonblack"
        style="?android:attr/borderlessButtonStyle"
        android:id="@id/ButtonCart"/>


</AbsoluteLayout>